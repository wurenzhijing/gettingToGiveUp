<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.parcelablelearning.ParcelableActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_aname"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="ParcelableActivity"/>

    <TextView
        android:id="@+id/tv_aname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignLeft="@+id/tv_aname"
        android:layout_marginLeft="55dp"
        android:text="张三"/>

    <TextView
        android:id="@+id/tv_agender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_aname"
        android:layout_marginTop="30dp"
        android:text="性别"/>
    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="55dp"
        android:text="男"/>

    <TextView
        android:id="@+id/tv_aage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_agender"
        android:layout_marginTop="30dp"
        android:text="年龄"/>

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_gender"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="55dp"
        android:text="34"/>


</RelativeLayout>
